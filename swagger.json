{
  "openapi" : "3.0.0",
  "info" : {
    "version" : "v0.0.1-oas3",
    "title" : "Parliament REST API",
    "description" : "RESTful API for Candidates, Constituencies, Parliaments, Polls, Votes etc."
  },
  "paths" : {
    "/candidates" : {
      "get" : {
        "description" : "Returns a list of candidates",
        "operationId" : "getCandidates",
        "parameters" : [ {
          "$ref" : "#/components/parameters/PageLimit"
        }, {
          "$ref" : "#/components/parameters/PageNumber"
        }, {
          "$ref" : "#/components/parameters/PartyId"
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully returned a list of candidates",
            "content" : {
              "application/json:" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Candidate"
                  }
                }
              }
            }
          },
          "400" : {
            "$ref" : "#/components/responses/400Error"
          }
        }
      },
      "post" : {
        "description" : "Create a new Candidate",
        "operationId" : "postCandidate",
        "requestBody" : {
          "description" : "Optional description in *Markdown*",
          "required" : true,
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Candidate"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "$ref" : "#/components/responses/201Created"
          }
        }
      }
    },
    "/candidates/{candidateId}" : {
      "get" : {
        "description" : "Returns a candidate by ID",
        "operationId" : "getCandidate",
        "parameters" : [ {
          "name" : "candidateId",
          "in" : "path",
          "required" : true,
          "description" : "The ID of the candidate to return",
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "links" : {
              "GetCandidateParty" : {
                "operationId" : "getParty",
                "parameters" : {
                  "partyId" : "$response.body#/party"
                }
              }
            },
            "content" : {
              "application/json:" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Candidate"
                }
              }
            }
          },
          "400" : {
            "$ref" : "#/components/responses/400Error"
          },
          "404" : {
            "description" : "A user with the specified ID was not found"
          }
        }
      }
    },
    "/parties" : {
      "get" : {
        "description" : "Returns a collection of Parties",
        "opertationId" : "getParties",
        "parameters" : [ {
          "name" : "partyId",
          "in" : "query",
          "description" : "The ID of the Political Party to return",
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json:" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Party"
                }
              }
            },
            "links" : {
              "GetPartyMembers" : {
                "operationId" : "GetCandidatesByParty",
                "parameters" : {
                  "politicalParty" : "$response.body#/id"
                }
              }
            }
          }
        }
      }
    },
    "/parties/{partyId}" : {
      "get" : {
        "description" : "Returns a Political Party by ID",
        "opertationId" : "getParty",
        "parameters" : [ {
          "name" : "partyId",
          "in" : "path",
          "required" : true,
          "description" : "The ID of the Political Party to return",
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json:" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Party"
                }
              }
            },
            "links" : {
              "GetPartyMembers" : {
                "operationId" : "GetCandidatesByParty",
                "parameters" : {
                  "politicalParty" : "$response.body#/id"
                }
              }
            }
          }
        }
      }
    }
  },
  "servers" : [ {
    "url" : "https://virtserver.swaggerhub.com/Face-the-Facts/ParliamentAPI/v0.0.1"
  } ],
  "components" : {
    "parameters" : {
      "PageLimit" : {
        "name" : "limit",
        "in" : "query",
        "description" : "Limits the number of items on a page",
        "schema" : {
          "type" : "integer"
        }
      },
      "PageNumber" : {
        "name" : "offset",
        "in" : "query",
        "description" : "Specifies the page number of the artists to be displayed",
        "schema" : {
          "type" : "integer"
        }
      },
      "Candidate" : {
        "name" : "candidate",
        "in" : "query",
        "description" : "ID of the candidate to be filtered by",
        "schema" : {
          "type" : "integer"
        }
      },
      "PartyId" : {
        "name" : "party",
        "in" : "query",
        "description" : "ID of the party to be filtered by",
        "schema" : {
          "type" : "integer"
        }
      }
    },
    "responses" : {
      "400Error" : {
        "description" : "Invalid request",
        "content" : {
          "application/json" : {
            "schema" : {
              "type" : "object",
              "properties" : {
                "message" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      },
      "201Created" : {
        "description" : "Created",
        "content" : {
          "application/json" : {
            "schema" : {
              "type" : "object",
              "properties" : {
                "id" : {
                  "type" : "integer"
                }
              }
            }
          }
        }
      }
    },
    "schemas" : {
      "Candidate" : {
        "description" : "Electoral Candidate for political office",
        "type" : "object",
        "required" : [ "candidateId" ],
        "properties" : {
          "id" : {
            "type" : "integer",
            "readOnly" : true,
            "example" : 1
          },
          "name" : {
            "type" : "string",
            "example" : "Philipp Amthor"
          },
          "image" : {
            "type" : "object",
            "properties" : {
              "src" : {
                "type" : "string",
                "example" : "https://commons.wikimedia.org/wiki/File:Philipp_Amthor.jpg#/media/File:Philipp_Amthor.jpg"
              },
              "bbox" : {
                "type" : "object",
                "properties" : {
                  "minX" : {
                    "type" : "number",
                    "format" : "double",
                    "example" : 0
                  },
                  "maxX" : {
                    "type" : "number",
                    "format" : "double",
                    "example" : 2746
                  },
                  "minY" : {
                    "type" : "number",
                    "format" : "double",
                    "example" : 0
                  },
                  "maxY" : {
                    "type" : "number",
                    "format" : "double",
                    "example" : 2746
                  }
                }
              }
            }
          },
          "party" : {
            "type" : "integer",
            "example" : 1
          }
        }
      },
      "Constituency" : {
        "description" : "Electoral Constituency"
      },
      "Party" : {
        "description" : "Political Party",
        "type" : "object",
        "required" : [ "id" ],
        "properties" : {
          "id" : {
            "type" : "integer",
            "readOnly" : true,
            "example" : 1
          },
          "name" : {
            "type" : "string",
            "example" : "CDU/CSU"
          }
        }
      },
      "Poll" : {
        "description" : "Parliamentary Poll"
      },
      "Vote" : {
        "description" : "Vote on Parliamentary Poll",
        "properties" : {
          "id" : {
            "type" : "integer",
            "readOnly" : true
          },
          "candidate" : {
            "type" : "integer"
          },
          "poll" : {
            "type" : "integer"
          }
        }
      }
    }
  }
}